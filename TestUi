local TP = game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame
local lib = loadstring(game:HttpGet("https://raw.githubusercontent.com/AZYsGithub/Arceus-X-UI-Library/main/source.lua"))()
lib:SetTitle("Xerloraity HUB | The Mimic")
lib:SetIcon("rbxassetid://17381278901")

lib:AddButton("Skip", function()
    TP = CFrame.new()
end)

lib:AddToggle("Fullbright", function(state)
    if state then
        print('On!')
    else
        print('Off!')
    end
end, false)

lib:AddToggle("ESP", function(state)
    if state then
        print('On!')
    else
        print('Off!')
    end
end, false)

lib:SetBackgroundColor(0, 0, 0)
lib:SetCloseBtnColor(255, 0, 0)
lib:SetTitleColor(255, 255, 255)
lib:SetButtonsColor(55, 55, 55)
lib:SetTheme("Default")
